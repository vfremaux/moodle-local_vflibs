{{!
    @template local_vflibs/chart

    Chart rendering.

    Example context (json):
    {
        "withtable": true,
        "chartdata": "null"
    }
}}
<!-- Chart data : {{{chartdata}}} -->
<div class="chart-area" id="chart-area-{{localuniqid}}">
    <div class="chart-image" role="presentation" aria-describedby="chart-table-data-{{localuniqid}}" style="width: {{width}}px; height: {{height}}px"></div>
    <div class="chart-table {{^withtable}}accesshide{{/withtable}}">
        <p class="chart-table-expand">
            <a href="#" aria-controls="chart-table-data-{{localuniqid}}" role="button">
                {{#str}}showchartdata, moodle{{/str}}
            </a>
        </p>
        <div class="chart-table-data local_vflibs" id="chart-table-data-{{localuniqid}}" {{#withtable}}role="complementary" aria-expanded="false"{{/withtable}}></div>
    </div>
</div>

{{#js}}
require([
    'jquery',
    'local_vflibs/chart_builder',
    'local_vflibs/chart_output_chartjs',
    'core/chart_output_htmltable',
], function($, Builder, Output, OutputTable) {
    var data = {{{chartdata}}},
        localuniqid = "{{localuniqid}}",
        chartArea = $('#chart-area-' + localuniqid),
        chartImage = chartArea.find('.chart-image'),
        chartTable = chartArea.find('.chart-table-data'),
        chartLink = chartArea.find('.chart-table-expand a');
    Builder.make(data).then(function(ChartInst) {
        new Output(chartImage, ChartInst);
        new OutputTable(chartTable, ChartInst);
    });

    chartLink.on('click', function(e) {
        e.preventDefault();
        if (chartTable.is(':visible')) {
            chartTable.hide();
            chartLink.text({{#quote}}{{#str}}showchartdata, moodle{{/str}}{{/quote}});
            chartTable.attr('aria-expanded', false);
        } else {
            chartTable.show();
            chartLink.text({{#quote}}{{#str}}hidechartdata, moodle{{/str}}{{/quote}});
            chartTable.attr('aria-expanded', true);
        }
    });
});
{{/js}}
